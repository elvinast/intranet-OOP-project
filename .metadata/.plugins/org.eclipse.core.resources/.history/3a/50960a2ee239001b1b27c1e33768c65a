	@Override
	public int hashCode() {
		final int prime = 31;
		int result = super.hashCode();
		result = prime * result + ((courses == null) ? 0 : courses.hashCode());
		result = prime * result + ((faculty == null) ? 0 : faculty.hashCode());
		result = prime * result + ((teachingStatus == null) ? 0 : teachingStatus.hashCode());
		return result;
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (!super.equals(obj))
			return false;
		if (getClass() != obj.getClass())
			return false;
		Teacher other = (Teacher) obj;
		if (courses == null) {
			if (other.courses != null)
				return false;
		} else if (!courses.equals(other.courses))
			return false;
		if (faculty != other.faculty)
			return false;
		if (teachingStatus != other.teachingStatus)
			return false;
		return true;
	}

	@Override
	public String toString() {
		return "Teacher [courses=" + courses + ", teachingStatus=" + teachingStatus + ", faculty=" + faculty + "]";
	}
	
    
